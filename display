int error()
{
	system("cls");
	char a;
	cout << "错误，请按Q返回先前菜单或按Z返回主页面"<<endl;
	cin >> a;
	if (a == 'Q' || a == 'q')
		return 1;
	else if (a =='Z' || a == 'z')
	{
		system("cls");
		void display_1();
		void entersystem();
		display_1();
		entersystem();
	}
	else
		error();
}
class class_score
{
public:
	int question=q, call=c, homework=h, playmp=p, late=l;
	int sum1;
	void cscore();
private:
	int q, c, h, p, l;
};
void class_score::cscore()
{
	cin >> q >> c >> h >> p >> l;
	sum1 = q + c + h - p - l;
}
class practice_core
{
public:
	int program=p, call=c, homework=h, game=g, late=l;
	int sum;
	void pcdisplay();
private:
	int p, c, h, g, l;
};
void practice_core::pcdisplay()
{
	cin >> p >> c >> h >> g >> l;
	sum = p + c + h - g - l;
}
class stud :public class_score, public practice_core
{
public:
	int score = s;
private:
	int s=sum1+sum;
};
void display_1()
{

	for (int i = 0; i < 20; i++)
	{
		if (i == 0 || i == 19)
			cout << "==================================================================================" << endl;
		else if (i == 3)
			cout << "==                                 成绩查询系统                                 ==" << endl;
		else if (i == 12)
			cout << "==           学生入口请按S                                教师入口请按T         ==" << endl;
		else if (i == 17)
			cout << "==                                                               made by suiy   ==" << endl;
		else
			cout << "==                                                                              ==" << endl;
	}
}
void entersystem()
{
	char a;
	cin >> a;
	if (a == 'S' || a == 's')
	{
		system("cls");
		void display_stud();
		display_stud();
	}
	else if (a == 'T' || a == 't')
	{
		system("cls");
		void display_teacher();
		display_teacher();
	}
	else
	{
		int b;
		b = error();
		if (b == 1)
		{
			system("cls");
			display_1();
			entersystem();
		}
	}
}

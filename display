void display_1()
{

	for (int i = 0; i < 20; i++)
	{
		if (i == 0 || i == 19)
			cout << "==================================================================================" << endl;
		else if (i == 3)
			cout << "==                                 成绩查询系统                                 ==" << endl;
		else if (i == 12)
			cout << "==           学生入口请按S                                教师入口请按T         ==" << endl;
		else if (i == 17)
			cout << "==                                                               made by suiy   ==" << endl;
		else
			cout << "==                                                                              ==" << endl;
	}

}

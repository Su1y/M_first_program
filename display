#include <iostream>
#include <fstream>
#include <dos.h>
#include <string>
using namespace std;
int error()
{
	system("cls");
	char a;
	cout << "错误，请按Q返回先前菜单或按Z返回主页面"<<endl;
	cin >> a;
	if (a == 'Q' || a == 'q')
		return 1;
	else if (a =='Z' || a == 'z')
	{
		system("cls");
		void display_1();
		void entersystem();
		display_1();
		entersystem();
	}
	else
		error();
}
class class_score
{
public:
	int question, call, homework, playmp, late;
	int sum1;
	void cscore();
private:
	int q, c, h, p, l;
};
void class_score::cscore()
{
	cin >> q >> c >> h >> p >> l;
	question=q;
	call=c;
	homework=h;
	playmp=p;
	late=l;
	sum1 = q + c + h - p - l;
}
class practice_core
{
public:
	int program, call, homework, game, late;
	int sum;
	void pcdisplay();
private:
	int p, c, h, g, l;
};
void practice_core::pcdisplay()
{
	cin >> p >> c >> h >> g >> l;
	program=p;
	call=c; 
	homework=h; 
	game=g;
	late=l;
	sum = p + c + h - g - l;
}
class stud :public class_score, public practice_core
{
public:
	int score;
	void summ();
private:
	int s;
};
void stud::summ()
{
	s=sum1+sum;
	score=s;
}
void display_1()
{

	for (int i = 0; i < 20; i++)
	{
		if (i == 0 || i == 19)
			cout << "==================================================================================" << endl;
		else if (i == 3)
			cout << "==                                 成绩查询系统                                 ==" << endl;
		else if (i == 12)
			cout << "==           学生入口请按S                                教师入口请按T         ==" << endl;
		else if (i == 17)
			cout << "==                                                               made by suiy   ==" << endl;
		else
			cout << "==                                                                              ==" << endl;
	}
}
void entersystem()
{
	char a;
	cin >> a;
	if (a == 'S' || a == 's')
	{
		system("cls");
		void display_stud();
		display_stud();
	}
	else if (a == 'T' || a == 't')
	{
		system("cls");
		void display_teacher();
		display_teacher();
	}
	else
	{
		int b;
		b = error();
		if (b == 1)
		{
			system("cls");
			display_1();
			entersystem();
		}
	}
}
void display_stud()
{
		int i=0;
		system("cls");
		cout << "请输入要查询的班级:";
		cin >> i;
		if (i > 214 || i < 211)
		{
			int b;
			b = error();
			if (b == 1)
			{
				system("cls");
				display_stud();
			}
		}
		int p=0;
		cout << "请输入要查询的学号:";
		cin >> p;
		if (p < 1 || p>50)
		{
			int b;
			b = error();
			if (b == 1)
			{
				system("cls");
				display_stud();
			}
		}
			void checkscore(int i,int p);
			checkscore(i,p);
}
void display_teacher()
{
	string a = "admin";
	string user, password;
	cout<<"请输入登陆账号和密码:"<<endl<<"user:";
	cin >> user;
	cout << "password:";
	cin >> password;
	if (user == password&&user == a)
	{
		void display2_teacher();
		display2_teacher();
	}
	else
	{
		int b;
		b = error();
		if (b == 1)
		{
			system("cls");
			display_teacher();
		}
	}
}
void display2_teacher()
{
	char a;
	system("cls");
	cout << "按C查询学生成绩，按P更改学生成绩" << endl;
	cin >> a;
	if (a == 'c' || a == 'C')
	{
		int i=0;
		system("cls");
		cout << "请输入要查询的班级:";
		cin >> i;
		if (i > 214 || i < 211)
		{
			int b;
			b = error();
			if (b == 1)
			{
				system("cls");
				display2_teacher();
			}
		}
		int p=0;
		cout << "请输入要查询的学号:";
		cin >> p;
		if (p < 1 || p>50)
		{
			int b;
			b = error();
			if (b == 1)
			{
				system("cls");
				display2_teacher();
			}
		}
			void checkscore(int i,int p);
			checkscore(i,p);
	}
	else if (a == 'P' || a == 'p')
	{	
		int i=0;
		system("cls");
		cout << "请输入要更改的班级:";
		cin >> i;
		if (i > 214 || i < 211)
		{
			int b;
			b = error();
			if (b == 1)
			{
				system("cls");
				display2_teacher();
			}
		}
		int p=0;
		cout << "请输入要更改的学号:";
		cin >> p;
		if (p < 1 || p>50)
		{
			int b;
			b = error();
			if (b == 1)
			{
				system("cls");
				display2_teacher();
			}
		}
			void changescore(int i,int p);
			changescore(i,p);
	}
	else
	{
		int b;
		b = error();
		if(b==1)
		{
			system("cls");
			display2_teacher();
		}
	}
}
void checkscore(int i ,int p)
{
	stud clastud[4][50];
	fstream outfile;
	outfile.open("stud.dat",ios::in|ios::out|ios::binary);
	if(clastud[i-211][p-1].score>=0&&clastud[i-211][p-1].score<=20)
	{
		cout<<clastud[i-211][p-1].score;
	}
	else
	{
		cout<<"暂无此学生信息"<<endl;
	}

}
void changescore(int i,int p)
{

	fstream outfile;
	outfile.open("stud.dat",ios::in|ios::out|ios::binary);
	stud clastud[4][50];
	cout<<"请依次输入学生的课堂提问次数、点名次数、交作业次数、看手机次数和迟到次数。"<<endl;
	clastud[i-211][p-1].cscore();
	cout<<"请依次输入学生的上机程序抽查次数、点名次数、上交实验报告次数、玩游戏次数、迟到次数。"<<endl;
	clastud[i-211][p-1].pcdisplay();
	clastud[i-211][p-1].summ();
	if(clastud[i -211][p-1].score<0)
	{
		int b ;
		b=error();
		if(b==1)
		{
			system("cls");
			changescore(i,p);
		}
	}
	else
	{
		outfile.write((char*)&clastud[i-2111][p-1],sizeof(clastud[i-211][p-1]));
		cout<<clastud[i-211][p-1].score;
		outfile.close();
	}

}
